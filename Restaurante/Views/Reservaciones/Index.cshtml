@model Reservaciones

@{
    ViewData["Restaurante"] = "Raliza tu Reservacion";
}
<h1>Realiza tu Reservacion</h1>
<h5>Elige tu mesa favorita y reserva ahora</h5>

<form asp-action="Reservar">
<div class="mb-3">
<label asp-for="NombreCliente" class="form-label"></label>
<input type="text" asp-for="Mesa" class="form-control" />
</div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

